<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Model Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textModelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gemma 3 1B IT"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />

                <TextView
                    android:id="@+id/textFileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2 GB"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Status Indicator -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/status_indicator_available"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready"
                android:textSize="14sp"
                android:textColor="#34C759"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Model Description -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optimized for instruction following and conversation"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"
            android:maxLines="6"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Download Progress -->
        <LinearLayout
            android:id="@+id/layoutDownloadProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textDownloadProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Downloading... 45%"
                android:textSize="14sp"
                android:textColor="#007AFF"
                android:layout_marginBottom="4dp" />

            <ProgressBar
                android:id="@+id/progressBarDownload"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:progress="45"
                android:max="100"
                android:progressTint="#007AFF" />

        </LinearLayout>

        <!-- Primary Action Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Primary Action Button -->
            <Button
                android:id="@+id/buttonPrimaryAction"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Download"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#007AFF"
                android:layout_marginEnd="12dp" />

            <!-- Secondary Actions Menu -->
            <Button
                android:id="@+id/buttonSecondaryActions"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="â‹¯"
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="0dp" />

        </LinearLayout>

        <!-- Hidden Secondary Actions (shown on demand) -->
        <LinearLayout
            android:id="@+id/layoutSecondaryActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonLoadLocal"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Load File"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="#007AFF"
                android:background="?android:attr/selectableItemBackground"
                android:backgroundTint="#F0F8FF" />

            <Button
                android:id="@+id/buttonDownload"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Download"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="#34C759"
                android:background="?android:attr/selectableItemBackground"
                android:backgroundTint="#F0FFF0" />

            <Button
                android:id="@+id/buttonTest"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Test"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="#FF9500"
                android:background="?android:attr/selectableItemBackground"
                android:backgroundTint="#FFF8F0" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Delete"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="#FF3B30"
                android:background="?android:attr/selectableItemBackground"
                android:backgroundTint="#FFF0F0" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
